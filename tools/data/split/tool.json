{
  "name": "split",
  "version": "1.0.0",
  "description": "Split dataset into train/validation sets",
  "category": "data",
  "inputs": {
    "table": {
      "type": "table",
      "description": "Input table to split"
    },
    "ratio": {
      "type": "float",
      "description": "Train/test split ratio (0.0 to 1.0)",
      "default": 0.8
    },
    "seed": {
      "type": "int",
      "description": "Random seed for reproducible splits",
      "default": 1337
    }
  },
  "outputs": {
    "train": {
      "type": "table",
      "description": "Training dataset"
    },
    "val": {
      "type": "table",
      "description": "Validation dataset"
    }
  },
  "capabilities": [],
  "implementation": "tools/data/split/impl.py"
}