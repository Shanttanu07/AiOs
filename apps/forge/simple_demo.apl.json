{
  "goal": "Analyze customer data and generate report",
  "capabilities": ["fs.read", "fs.write"],
  "steps": [
    {
      "id": "step1",
      "op": "read_csv",
      "description": "Load customer data",
      "in": "sandbox/in/crm_customers.csv",
      "out": "$customer_data"
    },
    {
      "id": "step2",
      "op": "profile",
      "description": "Analyze data structure",
      "in": "$customer_data",
      "out": "$data_profile"
    },
    {
      "id": "step3",
      "op": "emit_report",
      "description": "Generate analysis report",
      "in": {"schema": "$data_profile", "output_path": "sandbox/out/customer_analysis.md"}
    }
  ],
  "inputs": {"main_input": "sandbox/in/crm_customers.csv"}
}